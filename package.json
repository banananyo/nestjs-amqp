{
  "name": "@dollarsign/nestjs-amqp",
  "version": "0.0.0-development",
  "description": "Nestjs AMQP",
  "author": "Dollarsign",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "keywords": [
    "nestjs",
    "amqp",
    "nestjs-amqp"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dollarsignteam/nestjs-amqp.git"
  },
  "bugs": "https://github.com/dollarsignteam/nestjs-amqp/issues",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "nest build",
    "format": "prettier --write src/**/*.ts test/**/*.ts libs/**/*.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint --ignore-path .gitignore --ext .ts {src,libs,test}/**/*.ts --fix",
    "type-check": "tsc-files --noEmit",
    "fix": "tsc --noEmit && yarn format && yarn lint",
    "test": "jest --forceExit --detectOpenHandles",
    "test:cov": "npm run test -- --verbose --coverage",
    "test:watch": "npm run test -- --coverage --watchAll",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@dollarsign/logger": "^1.4.0",
    "rhea-promise": "^2.1.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.6.0",
    "@nestjs/core": "^7.6.0",
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/common": "^7.6.18",
    "@nestjs/core": "^7.6.18",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.18",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-typescript-sort-keys": "^1.7.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.1.0",
    "semantic-release": "^17.4.4",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsc-files": "^1.1.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@dollarsign/nestjs-amqp/(.*)": "<rootDir>/libs/amqp/src/$1",
      "@dollarsign/nestjs-amqp": "<rootDir>/libs/amqp/src"
    }
  }
}
